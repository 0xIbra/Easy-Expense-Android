<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fr.ibragim.e_expense.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewTemplate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/colorPrimary"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/roundcard">

            <ImageView
                android:id="@+id/justi"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/idNoteFrais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2d2d2d"
                android:layout_toRightOf="@id/justi"
                android:text="Note 1"
                android:textSize="20dp"
                android:layout_marginHorizontal="5dp"/>

            <TextView
                android:id="@+id/dateNoteFrais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idNoteFrais"
                android:layout_toRightOf="@id/justi"
                android:textColor="#2d2d2d"
                android:text="03/04/2018"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/etatNoteFrais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="en cours"
                android:textColor="#fff"
                android:background="@drawable/etatbackground"
                android:textSize="18dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/noteslist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp">



    </ListView>


</LinearLayout>
