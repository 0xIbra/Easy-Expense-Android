<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.ibragim.e_expense.Fragments.AccountFragment">

    <LinearLayout
        android:id="@+id/profileContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/non_gradient_background">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/user_icon"/>

        <TextView
            android:id="@+id/nameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Easy Expense"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/txtWhite"
            android:textSize="20dp"
            android:paddingBottom="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:layout_below="@id/profileContainer">



    </LinearLayout>

</RelativeLayout>
