<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context="fr.ibragim.e_expense.Fragments.TrajetFragment"
    android:background="#fff"
    android:paddingHorizontal="30dp">


    <EditText
        android:id="@+id/distanceTrajet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distance en KM"
        android:drawableRight="@drawable/ic_directions_car_black_24dp"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/dureeTrajet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Durée"
        android:drawableRight="@drawable/ic_access_time_black_24dp"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"/>


    <EditText
        android:id="@+id/dateAllerTrajet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:drawableRight="@drawable/date"
        android:editable="false"
        android:hint="Date aller"
        android:paddingLeft="10dp"
        android:textIsSelectable="false" />


    <EditText
        android:id="@+id/dateRetourTrajet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:hint="Date retour"
        android:drawableRight="@drawable/date"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:editable="false"/>


    <EditText
        android:id="@+id/villeDepartTrajet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ville de départ"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/villeArriveeTrajet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ville de arrivee"
        android:paddingLeft="10dp"/>

</LinearLayout>
