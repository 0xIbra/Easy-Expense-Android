<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dddddd"
    tools:context="fr.ibragim.e_expense.TypeDepenseActivity">

    <include layout="@layout/custom_toolbar"
        android:id="@+id/customToolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="40dp">


        <android.support.v7.widget.CardView
            android:id="@+id/FraisCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_card_clue"
            app:cardBackgroundColor="@color/appMainColor"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_euro_symbol_black_large"
                        android:layout_marginBottom="20dp"
                        />
                </RelativeLayout>



                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frais"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#fff"
                    />



            </LinearLayout>


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/TrajetCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/appMainColor"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_directions_car_black_24dp_large"
                        android:layout_marginBottom="20dp"
                        />
                </RelativeLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trajet"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#fff"
                        />



            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>








</LinearLayout>
